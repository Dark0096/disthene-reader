reader:
  bind: "<%= @reader_host %>"
  port: <%= @reader_port %>
  threads: <%= @reader_threads %>
  requestTimeout: <%= @reader_request_timeout %>
  rollups:
<% @reader_rollups.each do |rollup| -%>
    - <%= rollup %>
<% end -%>
store:
  cluster:
<% @store_cluster.each do |node| -%>
    - "<%= node %>"
<% end -%>
  port: <%= @store_port %>
  keyspace: "<%= @store_keyspace %>"
  columnFamily: "<%= @store_column_family %>"
  maxConnections: <%= @store_max_connections %>
  readTimeout: <%= @store_read_timeout %>
  connectTimeout: <%= @store_connect_timeout %>
  maxRequests: <%= @store_max_requests %>
index:
  name: "<%= @index_name %>"
  cluster:
<% @index_cluster.each do |node| -%>
    - "<%= node %>"
<% end -%>
  port: <%= @index_port %>
  index: "<%= @index_index %>"
  type: "<%= @index_type %>"
  scroll: <%= @index_scroll %>
  timeout: <%= @index_timeout %>
  maxPaths: <%= @index_max_paths %>
stats:
  interval: <%= @stats_interval %>
  tenant: "<%= @stats_tenant %>"
  hostname: "<%= @stats_hostname %>"
  carbonHost: "<%= @stats_carbon_hostname %>"
  carbonPort: <%= @stats_carbon_port %>
